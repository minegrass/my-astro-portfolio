---
interface Props {
  href: string;
  img: string;
  caption: string;
}

const { href, img, caption } = Astro.props;
---

<a href={href}>
  <div class="bg-gray-100 rounded-lg shadow-md p-8">
    <div class="mt-4">
      <img
        src={img}
        alt="Post image"
        class="rounded-lg transition-transform duration-300 ease-in-out lg:hover:scale-150"
      />
    </div>
    <div class="mt-4">
      <p class="text-gray-700">
        {caption}
      </p>
    </div>
  </div>
</a>
