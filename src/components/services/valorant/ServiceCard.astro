---
interface Props {
  title: string;
  imgHref: string;
  description: string[];
  link: string;
}

const { title, imgHref, description, link } = Astro.props;
---

<a href={link}>
  <div
    class="flex flex-col justify-center items-center bg-gray-800 hover:bg-gray-700 transition-all ease-in-out rounded-xl py-5 group"
  >
    <img
      src={imgHref}
      alt="Rank boosting icon"
      class="object-cover h-[80px] w-[80px] bg-white p-2 rounded-full group-hover:p-0 transition-all ease-in-out"
    />
    <h3 class="text-3xl font-bold mb-2 text-center text-white">
      {title}
    </h3>
    <ul class="text-lg text-center text-white">
      {description.map((desc) => <li class="mb-1 text-md">{desc}</li>)}
      <p class="text-lg text-center text-white"></p>
    </ul>
  </div>
</a>
