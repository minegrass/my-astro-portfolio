---
interface Props {
  title: string;
  imgHref: string;
  description: string;
}

const { title, imgHref, description } = Astro.props;
---

<div class="flex flex-col justify-center items-center">
  <img
    src={imgHref}
    alt="Rank boosting icon"
    class="object-cover h-[80px] w-[80px] bg-white p-2 rounded-full hover:p-1 transition-all ease-in-out"
  />
  <h3 class="text-2xl font-bold mb-2 text-center text-white">
    {title}
  </h3>
  <p class="text-lg text-center text-white">
    {description}
  </p>
</div>
