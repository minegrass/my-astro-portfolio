<button
  class="primary valo-btn"
  type="button"
  onclick="document.getElementById('cta').scrollIntoView();"
>
  <div class="label">
    <span class="hover-effect"></span>
    <span class="valo-font text-black label-text lg:text-md text-lg"
      >Get Out of Elo Hell</span
    >
  </div>
</button>

<style>
  .valo-btn {
    font-family: "DIN Next LT Pro Bold";
    font-size: 1.9rem;
    font-weight: 400;
    position: relative;
    display: block;
    width: 100%;
    margin-bottom: 3rem;
    padding: 0.7rem;
    cursor: pointer;
    text-transform: uppercase;
    color: var(--v-white);
    border: 0;
    background-color: transparent;
  }

  .valo-btn:hover {
    color: var(--v-white);
  }

  .valo-btn::before,
  .valo-btn::after {
    position: absolute;
    left: 0;
    width: 100%;
    height: calc(50% - 0.4rem);
    content: "";
    border: 1px solid var(--v-outline);
    background-color: transparent;
  }

  .valo-btn::before {
    top: 0;
    border-bottom: 0;
  }

  .valo-btn::after {
    bottom: 0;
    border-top: 0;
  }

  /* Hover Effect */

  .hover-effect {
    position: absolute;
    z-index: 1;
    top: 0;
    left: -5%;
    width: 110%;
    height: 100%;
    content: "";
    transition: -webkit-transform 0.3s ease-out;
    transition: transform 0.3s ease-out;
    transform: translateX(-100%) skew(-10deg);
    background-color: var(--v-red);
  }

  .valo-btn:hover .hover-effect {
    transform: translateX(0) skew(-10deg);
  }

  /* LABEL  */

  .label {
    position: relative;
    overflow: hidden;
    margin: 0;
  }

  .label:before {
    position: absolute;
    bottom: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    content: "";
  }

  /* Label Text */

  .label-text {
    position: relative;
    z-index: 1;
    display: block;
    padding: 1.9rem 3rem;
  }

  /* Right Bottom Corner dot */

  .label-text:after {
    position: absolute;
    right: 0;
    bottom: 0;
    display: block;
    width: 0.6rem;
    height: 0.6rem;
    content: "";
    transition: background-color 0.2s ease-in;
    background-color: var(--v-black);
  }

  .valo-btn:hover .label-text:after {
    background-color: var(--v-white);
  }

  /* PRIMARY .valo-btn */

  .primary {
    color: var(--v-black);
  }

  .primary .label::before {
    background-color: var(--v-white);
  }

  /* OUTLINE .valo-btn */

  .outline {
    color: var(--v-white);
  }

  .outline .label::before,
  .outline .label::after {
    border: 1px solid var(--v-outline);
  }

  /* OUTLINE RED .valo-btn */

  .outline + .red {
    color: var(--v-red);
  }

  .outline + .red:hover {
    color: var(--v-white);
  }

  .outline + .red .label::before,
  .outline + .red .label::after {
    border-color: var(--v-red);
  }
</style>
