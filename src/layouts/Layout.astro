    <link
      href="https://fonts.googleapis.com/css?family=Source+Code+Pro:400,500"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <!-- View transition -->
    <ViewTransitions />
    <title>{title}</title>
  </head>

  <body>
    <slot />
    <footer class="footer">
      <!-- copyright -->
      <p>
        &copy; {currentYear}
