        <title>{title}</title>
        <meta name="title" content="Tomato Wilbur Yap" />
        <meta
            name="description"
            content="Tomato Wilbur Yap, An Online Identity that messing in the online world. Not sure you get here, but here is all about him."
        />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="" />
        <meta property="og:title" content="Tomato Wilbur Yap" />
        <meta
            property="og:description"
            content="Tomato Wilbur Yap, An Online Identity that messing in the online world. Not sure you get here, but here is all about him."
        />
        <meta property="og:image" content="seo-image-link" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="" />
        <meta property="twitter:title" content="Tomato Wilbur Yap" />
        <meta
            property="twitter:description"
            content="Tomato Wilbur Yap, An Online Identity that messing in the online world. Not sure you get here, but here is all about him."
        />
        <meta property="twitter:image" content="seo-image-link" />

        <meta
            name="keywords"
            content="Tomato Wilbur Yap, Tomato Yap, Wilbur Yap"
        />
        <meta name="robots" content="index, follow" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="language" content="English" />
        <meta name="author" content="Tomato Wilbur Yap" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <!-- font -->
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
            rel="stylesheet"
        />
        <meta name="generator" content={Astro.generator} />
        <!-- View transition -->
        <title>{title}</title>
    </head>
    <body>
        <nav class="">
            <div class="grid grid-cols-3 p-5">
                <div class="flex items-center">
                    <div
                        class="bg-web-primary-dark rounded-full flex-row flex sm:hidden"
                    >
                        <a
                            class="p-3 drop-shadow-md rounded-full bg-web-primary-dark text-web-primary-content font-bold hover:bg-web-secondary hover:text-web-secondary-content transition-all ease-in"
                            href="#"><p class="">ðŸ’²</p></a
