---
import Navbar from "../components/services/web-design/Navbar.astro";
import ShowcaseScreenContact from "../components/services/web-design/ShowcaseScreenContact";
interface Props {
    title: string;
}

const { title } = Astro.props;

const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en" class="bg-web-background text-web-copy">
    <head>
