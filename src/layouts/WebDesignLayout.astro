            <!-- copyright -->
            <p>
                &copy; {currentYear}
                <a href="/about-me">Tomato Wilbur Yap.</a> All rights reserved.
            </p>
        </footer>
        <style is:global>
            :root {
                --accent: 136, 58, 234;
                --accent-light: 224, 204, 250;
                --accent-dark: 49, 10, 101;
                --accent-gradient: linear-gradient(
                    45deg,
                    rgb(var(--accent)),
                    rgb(var(--accent-light)) 30%,
                    white 60%
                );
            }
            * {
                font-family: "Source Code Pro", "Roboto", sans-serif;
                margin: 0;
                padding: 0;
            }
        </style>
    </body>
</html>
