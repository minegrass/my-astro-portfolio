---
import ValorantLayout from "../../../layouts/ValorantLayout.astro";
import ServiceOptionSection from "../../../components/services/valorant/ServiceOptionSection.jsx";
import ServiceCard from "../../../components/services/valorant/ServiceCard.astro";
import QnABar from "../../../components/services/valorant/QnABar.astro";
---

<ValorantLayout title="Tom Valorant Grinding Service Malaysia">
    <main>
        <!-- top banner -->
        <div class="font-bold">
            <div
                class="justify-center flex flex-col items-center bg-red-500 py-10 text-shadow-normal"
            >
                <h1 class="text-8xl">
                    <span class="valo-font">Tom</span> Valorant Grinding
                </h1>
                <h2 class="text-3xl">Grind for you to unlock level rewards.</h2>
            </div>
        </div>
        <!-- seperator -->
        <div class="my-10"></div>
        <!-- Coach Introduction -->
        <!-- Price  -->
    </main>
    <!-- seperator -->
    <div class="my-10"></div>
    <!-- Extra Add On -->
    <section class="mx-10">
        <div class="flex justify-center items-center">
            <h1
                class="text-2xl bg-red-500 px-5 py-2 rounded-xl mb-5 font-bold text-shadow"
            >
                Pricing
            </h1>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-5 gap-y-5">
            <ServiceCard
                title="Battlepass Grinding"
                imgHref="https://placehold.co/400x400"
                link="#"
                description={[
                    "Unlock Battlepass rewards",
                    "Cost : RM 12 / level",
                ]}
            />
